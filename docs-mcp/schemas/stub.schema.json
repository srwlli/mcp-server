{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "stub.schema.json",
  "title": "Feature Stub Schema",
  "description": "Schema for stub.json files - lightweight feature placeholders for backlog tracking",
  "version": "1.0.0",
  "type": "object",
  "required": ["feature_name", "description"],
  "properties": {
    "stub_id": {
      "type": "string",
      "pattern": "^STUB-\\d{3}$",
      "description": "Unique stub identifier (e.g., STUB-001)"
    },
    "feature_name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Feature name (alphanumeric, hyphens, underscores)"
    },
    "project": {
      "type": "string",
      "description": "Project this stub belongs to (e.g., 'scriptboard', 'scrapper', 'gridiron-franchise')"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the feature idea"
    },
    "category": {
      "type": "string",
      "enum": ["feature", "improvement", "bugfix", "idea", "research", "refactor"],
      "description": "Type of work this stub represents"
    },
    "priority": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "description": "Priority level for backlog ordering"
    },
    "status": {
      "type": "string",
      "enum": ["stub", "planned", "in_progress", "completed", "archived"],
      "default": "stub",
      "description": "Current status of the stub"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when stub was created"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Optional tags for categorization and filtering"
    },
    "notes": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional notes, context, or metadata"
    },
    "related_to": {
      "type": "string",
      "description": "Related feature or project reference"
    }
  }
}
