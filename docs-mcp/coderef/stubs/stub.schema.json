{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stub Entry",
  "description": "Quick idea or improvement stub for future work",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique stub identifier (STUB-XXX)",
      "pattern": "^STUB-[0-9]{3}$"
    },
    "title": {
      "type": "string",
      "description": "Short title (max 50 chars)",
      "maxLength": 50
    },
    "description": {
      "type": "string",
      "description": "Brief description (max 200 chars)",
      "maxLength": 200
    },
    "category": {
      "type": "string",
      "enum": ["feature", "fix", "improvement", "idea", "refactor"],
      "default": "idea"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "default": "medium"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "title", "description"]
}
